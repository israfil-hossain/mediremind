# Firebase Configuration
# Get these from your Firebase Console > Project Settings > General > Your apps
# For iOS/Android: Download GoogleService-Info.plist / google-services.json
# For Web Client ID: Go to Google Cloud Console > APIs & Services > Credentials
EXPO_PUBLIC_FIREBASE_WEB_CLIENT_ID=your-web-client-id.apps.googleusercontent.com

# RevenueCat API Key
# Get this from RevenueCat Dashboard > Project Settings > API Keys
# Use production key (e.g., appl_xxx or goog_xxx) for real subscriptions
# Use test key (e.g., test_xxx) for development (paywall won't display in test mode)
EXPO_PUBLIC_REVENUECAT_API_KEY=your-revenuecat-api-key

# Firebase Project Config
EXPO_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
EXPO_PUBLIC_FIREBASE_APP_ID=your-app-id

# Development: Override premium status for testing (true/false)
# Set to 'true' to test premium features without a subscription
EXPO_PUBLIC_DEV_IS_PREMIUM=false
